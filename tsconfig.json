{
  "compilerOptions": {
    // File Layout
    "rootDir": "./",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": false,

    // Strictness
    "strict": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Speed
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
